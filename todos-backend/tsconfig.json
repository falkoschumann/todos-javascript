{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "target": "es2015"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.*"]
}
