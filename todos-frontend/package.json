{
  "name": "todos-frontend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run compile && npm run tailwindcss",
    "clean": "rm -rf dist",
    "watch": "concurrently \"npm run compile:watch\" \"npm run tailwindcss:watch\"",
    "test": "TS_NODE_PROJECT=./tsconfig-test.json mocha --require ts-node/register src/**/*.test.ts",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "tailwindcss": "tailwindcss -i ./src/style.css -o ./dist/style.css --minify",
    "tailwindcss:watch": "tailwindcss -i ./src/style.css -o ./dist/style.css --watch"
  },
  "dependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "classnames": "^2.3.1",
    "react": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "todos-contract": "^1.0.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "chai": "^4.3.6",
    "concurrently": "^7.3.0",
    "mocha": "^10.0.0",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  }
}
